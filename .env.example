# =============================================================================
# Zuclubit Smart CRM - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# SSO Authentication (Zuclubit SSO)
# -----------------------------------------------------------------------------
# SSO Server URLs
SSO_ISSUER_URL=https://sso.zuclubit.com
SSO_JWKS_URI=https://sso.zuclubit.com/.well-known/jwks.json

# OAuth Client Credentials
SSO_CLIENT_ID=ventazo
SSO_CLIENT_SECRET=ventazo-secret-2026

# Authentication Mode: SSO only (Zuclubit SSO is the only auth method)
AUTH_MODE=sso

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_DURATION_DAYS=7

# -----------------------------------------------------------------------------
# Lead Service Configuration
# -----------------------------------------------------------------------------
# Server
PORT=3000
HOST=0.0.0.0

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=leads
POSTGRES_USER=dev
POSTGRES_PASSWORD=dev123

# NATS Event Bus
NATS_SERVERS=nats://localhost:4222

# API Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# -----------------------------------------------------------------------------
# Future Services (Customer Service, Deal Service, etc.)
# -----------------------------------------------------------------------------
